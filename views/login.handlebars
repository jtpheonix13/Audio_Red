<div class="flex justify-center items-center h-screen bg-gray-100">
  <div class="w-full max-w-md flex">
    <div class="w-full max-w-md px-2">
      <h2 class="text-3xl font-bold mb-6 text-center ">Login</h2>

      <form id="login-form" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="email-login">Email:</label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight " type="text" id="email-login" placeholder="Enter your email" />
        </div>
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="password-login">Password:</label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight " type="password" id="password-login" placeholder="Enter your password" />
        </div>
        <div class="flex items-center justify-between">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded " type="submit">Login</button>
        </div>
      </form>
    </div>

    <div class="w-full max-w-md px-2">
      <h2 class="text-3xl font-bold mb-6 text-center">Register</h2>

      <form id="signup-form" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="first-name-signup">First Name:</label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight " type="text" id="first-name-signup" placeholder="Enter your first name" />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="last-name-signup">Last Name:</label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight " type="text" id="last-name-signup" placeholder="Enter your last name" />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="email-signup">Email:</label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight " type="text" id="email-signup" placeholder="Enter your email" />
        </div>
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="password-signup">Password:</label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight " type="password" id="password-signup" placeholder="Enter your password" />
        </div>
        <div class="flex items-center justify-between">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded " type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
